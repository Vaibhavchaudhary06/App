{
  "info": { "name": "Assignment API", "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json" },
  "item": [
    { "name": "Health", "request": { "method": "GET", "url": "{{base}}/api/health" } },
    { "name": "Signup", "request": {
      "method": "POST",
      "header": [{ "key": "Content-Type", "value": "application/json" }],
      "body": { "mode": "raw", "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"secret123\"\n}" },
      "url": "{{base}}/api/auth/signup"
    }},
    { "name": "Login", "request": {
      "method": "POST",
      "header": [{ "key": "Content-Type", "value": "application/json" }],
      "body": { "mode": "raw", "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"secret123\"\n}" },
      "url": "{{base}}/api/auth/login"
    },
    "event": [{
      "listen": "test",
      "script": { "exec": [
        "const json = pm.response.json();",
        "if (json.token) { pm.environment.set('token', json.token); }"
      ] }
    }]},
    { "name": "Profile (GET)", "request": {
      "method": "GET",
      "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
      "url": "{{base}}/api/profile"
    }},
    { "name": "Profile (PUT)", "request": {
      "method": "PUT",
      "header": [
        { "key": "Authorization", "value": "Bearer {{token}}" },
        { "key": "Content-Type", "value": "application/json" }
      ],
      "body": { "mode": "raw", "raw": "{\n  \"name\": \"Updated Name\"\n}" },
      "url": "{{base}}/api/profile"
    }},
    { "name": "Tasks (LIST)", "request": {
      "method": "GET",
      "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
      "url": "{{base}}/api/tasks"
    }},
    { "name": "Tasks (CREATE)", "request": {
      "method": "POST",
      "header": [
        { "key": "Authorization", "value": "Bearer {{token}}" },
        { "key": "Content-Type", "value": "application/json" }
      ],
      "body": { "mode": "raw", "raw": "{\n  \"title\": \"First Task\",\n  \"status\": \"pending\"\n}" },
      "url": "{{base}}/api/tasks"
    }},
    { "name": "Tasks (UPDATE)", "request": {
      "method": "PUT",
      "header": [
        { "key": "Authorization", "value": "Bearer {{token}}" },
        { "key": "Content-Type", "value": "application/json" }
      ],
      "body": { "mode": "raw", "raw": "{\n  \"status\": \"done\"\n}" },
      "url": "{{base}}/api/tasks/:id"
    }},
    { "name": "Tasks (DELETE)", "request": {
      "method": "DELETE",
      "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
      "url": "{{base}}/api/tasks/:id"
    }}
  ]
}
